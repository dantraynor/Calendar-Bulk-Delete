{
  "manifest_version": 3,
  "name": "Calendar Bulk Delete (DEV)",
  "version": "1.0.0",
  "description": "DEV build for testing Google Calendar bulk delete",
  "author": "Tesseras",
  "homepage_url": "https://tesseras.org/calendar-bulk-delete.html",

  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "tabs"
  ],

  "host_permissions": [
    "https://calendar.google.com/*",
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [{
    "matches": ["https://calendar.google.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Calendar Bulk Delete"
  },

  "oauth2": {
    "client_id": "61315760650-5ugtouefm5q5fmeat97qdt53lvmqf114.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
