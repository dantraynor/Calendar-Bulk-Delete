{
  "name": "calendar-bulk-event-manager",
  "version": "1.0.0",
  "description": "Chrome extension for bulk deletion of Google Calendar events with advanced filtering",
  "scripts": {
    "build": "npm run lint && npm run test",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "package": "zip -r calendar-bulk-event-manager.zip . -x 'node_modules/*' '.git/*' '*.zip' 'package-lock.json' '.eslintcache' 'coverage/*' 'test/*' 'public/*'",
    "dev:serve": "python3 -m http.server 8000",
    "validate": "web-ext lint --source-dir=.",
    "start:firefox": "web-ext run --source-dir=."
  },
  "keywords": [
    "chrome-extension",
    "google-calendar",
    "bulk-delete",
    "calendar-management",
    "productivity"
  ],
  "author": "Tesseras <support@tesseras.org>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "web-ext": "^7.8.0",
    "@types/chrome": "^0.0.246"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["<rootDir>/test/setup.js"],
    "testMatch": ["<rootDir>/test/**/*.test.js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!test/**",
      "!jest.config.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}